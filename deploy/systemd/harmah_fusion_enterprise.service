[Unit]
Description=Harmah Fusion Enterprise FastAPI
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/harmah-fusion-enterprise
Environment="PYTHONUNBUFFERED=1"
ExecStart=/opt/harmah-fusion-enterprise/.venv/bin/uvicorn backend.app:app --host 0.0.0.0 --port 8000 --proxy-headers --forwarded-allow-ips="*"
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
